{
  "version": "2.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/labd/react-abode"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsup ./src/index.ts --dts --watch",
    "build": "tsup ./src/index.ts --dts",
    "get:changes": "git log --format=%B --no-merges HEAD  ^master | pbcopy",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest",
    "prepare": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-abode",
  "author": "Bram Kaashoek",
  "module": "dist/react-abode.esm.js",
  "devDependencies": {
    "@changesets/cli": "^2.24.1",
    "@types/jest": "^28.1.*",
    "@types/jsdom": "^20.0.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-next": "^12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "fast-check": "^3.1.1",
    "husky": "^4.2.5",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "mutationobserver-shim": "^0.3.7",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^28.0.7",
    "tslib": "^2.0.0",
    "tsup": "^6.2.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "resolutions": {
    "serialize-javascript": "^3.1.0"
  },
  "dependencies": {
    "tiny-current-script": "^1.0.0"
  }
}
